<div class="container">
  <div class="row">
    <div class="span6 offset3">
      <div class="hero-unit">

        <fieldset>
          <legend>登录</legend>
          <%=form_for(@user, :url => 'login', :html => {:method => 'get', :class => 'form-horizontal'}) do |f| %>
          <div class="control-group">
            <%= f.label :username, "用户名：", :class=>'control-label' %>
            <div class="controls">
              <%= f.text_field :username, :class => 'input-xlarge', :required => 'true' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :password, '密码：', :class => 'control-label' %>
            <div class="controls">
              <%= f.text_field :password, :type => 'password', :class => 'input-xlarge', :required => 'true' %>
            </div>
          </div>
          <div class="control-group">
            <div class="controls">
              <%= f.submit '登录', :class => 'btn btn-primary' %>
            </div>
          </div>
          <% end %>
        </fieldset>
      </div>
    </div>
  </div>
</div>
